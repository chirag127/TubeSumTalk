{
  "name": "youtube-video-summarizer-sidebar",
  "version": "1.0.0",
  "description": "Browser extension and backend to summarize YouTube videos and read aloud summaries.",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "generate-icons": "node scripts/generate-icons.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "author": "chirag127",
  "license": "MIT",
  "workspaces": [
    "backend",
    "extension"
  ],
  "dependencies": {
    "sharp": "^0.34.1",
    "@google/generative-ai": "^0.1.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "^../utils/(.*)$": "<rootDir>/extension/utils/$1"
    }
  }
}