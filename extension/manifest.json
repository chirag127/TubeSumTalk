{
  "manifest_version": 3,
  "name": "TubeSumTalk",
  "version": "1.0.0",
  "description": "Summarize YouTube videos and read summaries aloud with word highlighting",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "TubeSumTalk"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/watch*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "sidebar.js", "styles.css"],
      "matches": ["https://*.youtube.com/*"]
    }
  ]
}
